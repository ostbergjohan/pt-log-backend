# Multi-stage build for Spring Boot
FROM registry.access.redhat.com/ubi9/openjdk-21:1.20-2.1729776316 as builder

USER root

# Install build tools if needed
RUN microdnf update -y && \
    microdnf clean all

WORKDIR /build

# Copy Maven/Gradle files first (caching)
COPY pom.xml ./
COPY mvnw ./
COPY .mvn ./.mvn

# Download dependencies (cached layer)
RUN ./mvnw dependency:go-offline -B

# Copy source and build
COPY src ./src
RUN ./mvnw clean package -DskipTests && \
    cp target/*.jar app.jar

# Production stage
FROM registry.access.redhat.com/ubi9/openjdk-21-runtime:1.20-2.1729776316

# Metadata
LABEL maintainer="johan.ostberg@mail.com" \
      version="1.0" \
      description="PT-Log Backend Application"

USER root

# Security updates only
RUN microdnf update -y && \
    microdnf clean all && \
    rm -rf /var/cache/yum /tmp/* /var/tmp/*

# Create app directory
RUN mkdir -p /opt/app && \
    chown -R 1001:0 /opt/app && \
    chmod 755 /opt/app

WORKDIR /opt/app

# Copy JAR from builder
COPY --from=builder --chown=1001:0 /build/app.jar ./ptlog.jar

# Verify JAR integrity
RUN jar -tf ptlog.jar > /dev/null && \
    chmod 440 ptlog.jar

# Switch to non-root user
USER 1001

# Expose application port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8080/healthcheck || exit 1

# JVM Configuration
ENV JAVA_OPTS="-XX:+UseContainerSupport \
               -XX:MaxRAMPercentage=75.0 \
               -XX:+UseG1GC \
               -XX:+ExitOnOutOfMemoryError \
               -Djava.security.egd=file:/dev/./urandom \
               -Dspring.output.ansi.enabled=always"

# Run application
ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -jar ptlog.jar"]